# Настройки среды для Vite

# Режим разработки
NODE_ENV=development

# Настройки Vite
VITE_FORCE_ALLOW_HOSTS=true
VITE_ALLOW_ORIGIN=*

# Отключение строгой проверки хостов
VITE_DISABLE_HOST_CHECK=true

# Настройки сервера
VITE_HOST=0.0.0.0
VITE_PORT=5000

# Разрешить все хосты Replit
VITE_ALLOWED_HOSTS=all